<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/commonMargin"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_ability">

    <TextView
        android:id="@+id/tvNameAbility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NombreHabilidad"
        android:textColor="@color/black"
        android:textSize="@dimen/nameAbility"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/commonMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_description_ability"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nombre asda sadas asdsad asdsad Habilidad"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/commonMargin"
        android:layout_marginVertical="@dimen/minMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameAbility"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end" />
</androidx.constraintlayout.widget.ConstraintLayout>