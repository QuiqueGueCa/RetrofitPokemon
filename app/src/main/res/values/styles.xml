<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="whiteNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txtSize</item>
    </style>

    <style name="whiteBold" parent="whiteNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallWhite" parent="whiteNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txtSmallSize</item>
    </style>

    <style name="smallWhiteBold" parent="smallWhite">
        <item name="android:textStyle">bold</item>
    </style>
</resources>